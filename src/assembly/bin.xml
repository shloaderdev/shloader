<assembly>
    <id>dist</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <fileSets>
        <fileSet>
            <includes>
                <include>shloader.sh</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>target/lib</directory>
            <outputDirectory>jar</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>target</directory>
            <outputDirectory>jar</outputDirectory>
            <includes>
                <include>shloader-${pom.version}.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src</directory>
            <outputDirectory>/completed</outputDirectory>
            <directoryMode>0755</directoryMode>
            <includes>
                <include></include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src</directory>
            <outputDirectory>/uncompleted</outputDirectory>
            <directoryMode>0755</directoryMode>
            <includes>
                <include></include>
            </includes>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>conf-default.properties</source>
            <outputDirectory>/</outputDirectory>
            <destName>conf.properties</destName>
        </file>
        <file>
            <source>empty</source>
            <outputDirectory>/</outputDirectory>
            <destName>to_download</destName>
        </file>
        <file>
            <source>empty</source>
            <outputDirectory>/</outputDirectory>
            <destName>downloading</destName>
        </file>
        <file>
            <source>empty</source>
            <outputDirectory>/</outputDirectory>
            <destName>downloaded</destName>
        </file>
        <file>
            <source>empty</source>
            <outputDirectory>/</outputDirectory>
            <destName>myshows_processed</destName>
        </file>
    </files>
</assembly>